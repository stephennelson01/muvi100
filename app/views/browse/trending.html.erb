<h1 class="text-2xl font-bold mb-4">Trending</h1>

<div class="flex gap-3 mb-6">
  <%= link_to "Today",
    trending_path(period: "day"),
    class: "px-3 py-1.5 rounded-md text-sm font-medium " +
           (@period == "day" ? "bg-red-600 text-white" : "bg-neutral-700 text-neutral-200 hover:bg-red-500 hover:text-white") %>

  <%= link_to "This Week",
    trending_path(period: "week"),
    class: "px-3 py-1.5 rounded-md text-sm font-medium " +
           (@period == "week" ? "bg-red-600 text-white" : "bg-neutral-700 text-neutral-200 hover:bg-red-500 hover:text-white") %>
</div>

<%= render "shared/grid",
      collection: @results,
      next_url: (@has_more ? trending_path(period: @period, page: @page + 1) : nil),
      page_id: "grid" %>

<!-- When fetching next pages, controller responds with turbo_stream -->
<% if turbo_frame_request? %>
  <%= render "browse/page_append" %>
<% end %>
