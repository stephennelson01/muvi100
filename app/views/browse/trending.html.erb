<div class="flex items-center gap-2 mb-4">
  <%= link_to "This Week", trending_path(period: "week"), class: "px-3 py-1.5 rounded-md border border-neutral-700 #{params[:period]!="day" ? "bg-white text-neutral-900" : "text-neutral-200"}" %>
  <%= link_to "Today",     trending_path(period: "day"),  class: "px-3 py-1.5 rounded-md border border-neutral-700 #{params[:period]=="day" ? "bg-white text-neutral-900" : "text-neutral-200"}" %>
</div>
<%= render "shared/grid", collection: @results %>
