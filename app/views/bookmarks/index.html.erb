<div class="max-w-7xl mx-auto px-4">
  <h1 class="text-2xl font-bold mb-5 text-white">Your bookmarks</h1>
  <div class="grid gap-6 grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6">
    <% @bookmarks.each do |b| %>
      <div class="rounded-xl bg-neutral-800 border border-neutral-700 overflow-hidden">
        <% if b.poster_path.present? %>
          <img class="w-full aspect-[2/3] object-cover" src="https://image.tmdb.org/t/p/w500<%= b.poster_path %>" alt="<%= b.title %>">
        <% else %>
          <div class="w-full aspect-[2/3] bg-neutral-700"></div>
        <% end %>
        <div class="p-3">
          <h3 class="font-semibold text-white line-clamp-1"><%= b.title %></h3>
          <p class="text-sm text-neutral-300 line-clamp-2"><%= b.overview %></p>
          <%= button_to "Remove", bookmark_path(b), method: :delete,
               form: { data: { turbo_stream: true }},
               class: "mt-3 w-full py-2 rounded-lg border border-neutral-600 text-neutral-200 hover:bg-neutral-700 transition" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
