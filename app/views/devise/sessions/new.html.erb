<div class="auth-page">
  <div class="auth-card">
    <h2>Welcome back</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <label class="auth-label" for="user_email">Email</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>

      <div style="height: 0.75rem"></div>

      <label class="auth-label" for="user_password">Password</label>
      <%= f.password_field :password, autocomplete: "current-password", class: "auth-input" %>

      <% if devise_mapping.rememberable? %>
        <div class="auth-remember" style="margin-top:0.5rem">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div style="height: 0.75rem"></div>

      <%= f.submit "Sign In", class: "btn btn-red" %>
    <% end %>

    <div class="divider"><span>OR</span></div>

    <!-- Compact Google button with tiny inline icon -->
    <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-white" do %>
      <span class="google-icon" aria-hidden="true">
        <svg viewBox="0 0 48 48" width="20" height="20">
          <path fill="#FFC107" d="M43.6 20.5H42V20H24v8h11.3C33.6 32.5 29.2 36 24 36 16.8 36 11 30.2 11 23S16.8 10 24 10c3.6 0 6.9 1.4 9.3 3.7l5.7-5.7C35.5 4.3 30.1 2 24 2 12.3 2 2.9 11.4 2.9 23S12.3 44 24 44c11 0 20.1-8 20.1-21 0-1.8-.2-3.1-.5-4.5z"/>
          <path fill="#FF3D00" d="M6.3 14.7l6.6 4.8C14.6 16.2 18.9 14 24 14c3.6 0 6.9 1.4 9.3 3.7l5.7-5.7C35.5 4.3 30.1 2 24 2 16.2 2 9.5 6.2 6.3 14.7z"/>
          <path fill="#4CAF50" d="M24 44c5.1 0 9.6-1.7 13.1-4.6l-6-4.9C29.1 36.1 26.8 37 24 37c-5.2 0-9.6-3.5-11.2-8.2l-6.6 5C9.6 40.9 16.2 44 24 44z"/>
          <path fill="#1976D2" d="M43.6 20.5H42V20H24v8h11.3c-1.3 3.8-5.1 6.5-9.3 6.5-5.2 0-9.6-3.5-11.2-8.2l-6.6 5C9.6 40.9 16.2 44 24 44c11 0 20.1-8 20.1-21 0-1.8-.2-3.1-.5-4.5z"/>
        </svg>
      </span>
      <span>Sign in with Google</span>
    <% end %>

    <div class="auth-foot">
      New here?
      <%= link_to "Sign up", new_registration_path(resource_name) %>
    </div>
  </div>
</div>
