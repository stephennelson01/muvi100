<div data-controller="infinite-scroll"
     data-infinite-scroll-page-value="<%= @page || 1 %>"
     data-infinite-scroll-endpoint-value="<%= request.fullpath %>"
     data-infinite-scroll-target="container"
     class="grid gap-6 grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6">
  <% collection.each do |item| %>
    <%= render "shared/media_card", item: item, current_user: current_user %>
  <% end %>
</div>
<div class="flex justify-center py-6">
  <div data-infinite-scroll-target="spinner" class="hidden text-neutral-300">Loadingâ€¦</div>
</div>
