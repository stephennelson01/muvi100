<div id="auth_modal"
     data-modal-target="container"
     class="hidden fixed inset-0 z-50 items-center justify-center">

  <!-- Backdrop -->
  <div class="absolute inset-0 bg-black/70 backdrop-blur-sm"
       data-action="click->modal#close"></div>

  <!-- Modal Panel -->
  <div class="relative mx-auto w-[min(92vw,480px)] rounded-2xl bg-white text-neutral-900 shadow-2xl">
    <!-- Close button -->
    <button class="absolute top-3 right-3 text-2xl leading-none px-2 text-neutral-500 hover:text-neutral-800"
            data-action="click->modal#close">Ã—</button>

    <!-- Title (Stimulus expects this) -->
    <div class="px-5 py-4 border-b">
      <h3 class="text-lg font-bold" data-modal-target="title">Sign Up</h3>
    </div>

    <!-- Turbo Frame for Devise form -->
    <div class="p-5 space-y-3">
      <turbo-frame id="auth_frame" data-modal-target="frame"></turbo-frame>

      <!-- Toggle -->
      <div class="text-sm text-center">
        <span data-modal-target="toggleText">Already have an account?</span>
        <a href="#" class="text-red-600 font-medium"
           data-action="click->modal#toggle">Sign In</a>
      </div>
    </div>
  </div>
</div>
